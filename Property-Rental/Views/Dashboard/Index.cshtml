@model PropertyRental.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("Manager");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-speedometer2 me-2"></i> Dashboard</h2>
        <div class="text-muted">
            <i class="bi bi-calendar3 me-1"></i> @DateTime.Now.ToString("MMMM dd, yyyy")
        </div>
    </div>

    <!-- Common Statistics -->
    <div class="row g-4 mb-4">
        <!-- Total Properties -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 rounded-lg overflow-hidden transition-hover">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                            <i class="bi bi-house-door fs-2"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0 uppercase small fw-bold">Properties</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalProperties</h2>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Property" asp-action="Index" class="btn btn-link p-0 text-decoration-none small">
                            View all properties <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Bookings -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 rounded-lg overflow-hidden transition-hover">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                            <i class="bi bi-journal-check fs-2"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0 uppercase small fw-bold">@(isAdmin ? "Total Bookings" : "My Bookings")</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalBookings</h2>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a asp-controller="Booking" asp-action="Index" class="btn btn-link p-0 text-decoration-none small text-success">
                            Manage bookings <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Bookings -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 rounded-lg overflow-hidden transition-hover">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-warning bg-opacity-10 text-warning rounded-circle p-3 me-3">
                            <i class="bi bi-clock-history fs-2"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-0 uppercase small fw-bold">Pending Approval</h6>
                            <h2 class="fw-bold mb-0">@Model.PendingBookings</h2>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">Wait for administrator action</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isAdmin)
    {
        <h4 class="text-dark fw-bold mb-4 pt-3 border-top"><i class="bi bi-shield-lock me-2 text-muted"></i> Administrative Overview</h4>
        <div class="row g-4">
            <!-- Total Users -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-lg bg-light transition-hover">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-dark bg-opacity-10 text-dark rounded-circle p-3 me-3">
                                <i class="bi bi-people fs-2"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-0 uppercase small fw-bold">Registered Users</h6>
                                <h2 class="fw-bold mb-0">@Model.TotalUsers</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Roles -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-lg bg-light transition-hover">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-opacity-10 text-info rounded-circle p-3 me-3">
                                <i class="bi bi-person-badge fs-2"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-0 uppercase small fw-bold">System Roles</h6>
                                <h2 class="fw-bold mb-0">@Model.TotalRoles</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Menus -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-lg bg-light transition-hover">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-danger bg-opacity-10 text-danger rounded-circle p-3 me-3">
                                <i class="bi bi-list-task fs-2"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-0 uppercase small fw-bold">Active Menus</h6>
                                <h2 class="fw-bold mb-0">@Model.TotalMenus</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .transition-hover {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .transition-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        }
        .uppercase { text-transform: uppercase; }
        .rounded-lg { border-radius: 1rem; }
    </style>
}
