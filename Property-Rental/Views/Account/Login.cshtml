<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0">Welcome Back</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div asp-validation-summary="All" class="text-danger small mb-3"></div>

                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Username</label>
                            <input name="username" class="form-control" placeholder="Enter your username" required />
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Password</label>
                            <input name="password" type="password" class="form-control" placeholder="Enter your password" required />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Login
                            </button>
                            <a asp-action="Register" class="btn btn-link text-muted text-center mt-2">New here? Create an account</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
