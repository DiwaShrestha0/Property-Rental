@model PropertyRental.Property

@{
    ViewData["Title"] = "Property Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="row g-0">
                    <!-- Property Image Section -->
                    <div class="col-md-6">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="~/@Model.ImagePath" class="img-fluid h-100 object-fit-cover" alt="@Model.Title" style="min-height: 400px; width: 100%;" />
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center h-100" style="min-height: 400px;">
                                <div class="text-center">
                                    <i class="bi bi-house-door display-1 text-muted"></i>
                                    <p class="text-muted mt-2">No Image Available</p>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Property Info Section -->
                    <div class="col-md-6">
                        <div class="card-body p-4 d-flex flex-column h-100">
                            <div class="mb-auto">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h2 class="fw-bold text-dark mb-0">@Model.Title</h2>
                                    @if (Model.IsAvailable)
                                    {
                                        <span class="badge bg-success rounded-pill px-3 py-2">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger rounded-pill px-3 py-2">Unavailable</span>
                                    }
                                </div>

                                <p class="text-muted fs-5 mb-4">
                                    <i class="bi bi-geo-alt-fill text-danger me-2"></i> @Model.Address
                                </p>

                                <div class="mb-4">
                                    <h4 class="text-muted small fw-bold text-uppercase mb-2">Price per Night</h4>
                                    <h1 class="text-success fw-bold mb-0">@Model.Price.ToString("C")</h1>
                                </div>

                                <div class="mb-4 bg-light p-3 rounded shadow-sm border-start border-primary border-4">
                                    <h6 class="fw-bold mb-2">Property Highlights</h6>
                                    <ul class="list-unstyled mb-0 row">
                                        <li class="col-6 mb-2"><i class="bi bi-check2-circle text-primary me-2"></i> Verified Listing</li>
                                        <li class="col-6 mb-2"><i class="bi bi-check2-circle text-primary me-2"></i> Instant Booking</li>
                                        <li class="col-6 mb-2"><i class="bi bi-check2-circle text-primary me-2"></i> Secure Payments</li>
                                        <li class="col-6 mb-2"><i class="bi bi-check2-circle text-primary me-2"></i> Elite Support</li>
                                    </ul>
                                </div>
                            </div>

                            <div class="mt-4 pt-3 border-top">
                                <div class="d-grid gap-2">
                                    <a asp-controller="Booking" asp-action="Create" asp-route-propertyId="@Model.Id" class="btn btn-primary btn-lg shadow-sm">
                                        <i class="bi bi-calendar-check me-2"></i> Reserve This Property
                                    </a>
                                    <div class="d-flex gap-2 mt-2">
                                        <a asp-action="Index" class="btn btn-outline-secondary flex-grow-1">
                                            <i class="bi bi-arrow-left me-1"></i> Back to List
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .rounded-lg { border-radius: 1.25rem; }
        .object-fit-cover { object-fit: cover; }
        .shadow-lg { box-shadow: 0 1rem 3rem rgba(0,0,0,.175)!important; }
    </style>
}