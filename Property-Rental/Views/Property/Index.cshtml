@model IEnumerable<PropertyRental.Property>

<h2>Property List</h2>

<a asp-controller="Property" asp-action="Create" class="btn btn-primary">
    Add New Property
</a>

<table class="table mt-3">
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Address</th>
        <th>Price</th>
        <th>Actions</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(p.ImagePath))
                {
                    <img src="~/@p.ImagePath" alt="Property Image" style="width:100px; height:auto;" class="img-thumbnail" />
                }
                else
                {
                    <span>No Image</span>
                }
            </td>
            <td>@p.Title</td>
            <td>@p.Address</td>
            <td>@p.Price</td>
            <td>
                <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@p.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@p.Id">Delete</a>
            </td>
        </tr>
    }
</table>
